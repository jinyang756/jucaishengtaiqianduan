# 环境变量示例文件
# 复制此文件为 .env.local 并填写实际值

# 基础配置
VITE_APP_NAME=聚财生态基金管理系统
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=绿色投资，智慧理财

# 后端 API 地址
VITE_API_URL=https://jucaishengtaihouduan.vercel.app/api

# 错误监控配置
# VITE_SENTRY_DSN=https://your-sentry-dsn-here

# 国际化配置
VITE_DEFAULT_LOCALE=zh
VITE_SUPPORTED_LOCALES=zh,en

# Vercel 部署配置
# VERCEL_PROJECT_API_KEY=your_api_key_here

# Google Analytics
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# 环境控制
NODE_ENV=development
# NODE_ENV=production

# 调试模式
# DEBUG=true

# 特性开关
# VITE_FEATURE_MULTILINGUAL=true
# VITE_FEATURE_RESPONSIVE_TEST=true

